@model ASP.NetCoreProject.Models.Employee
@{
    ViewData["Title"] = "LoginEmployee";
    Layout = "~/Layout/_LayoutEmpty.cshtml";
}

<div class="cover">
    <div class="white-box">
        <form asp-action="LoginEmployee">
            <h1 style="color:dimgrey;"> Login Employee</h1>
            <h3 style="color:red;">@ViewBag.Message</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Username</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input type="password" asp-for="NIP" class="form-control" />
                <span asp-validation-for="NIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


